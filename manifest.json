{

  "manifest_version": 2,
  "name": "vtex-local-cookie",
  "description": "Add the VtexIdclientAutCookie cookie to vtexlocal and the uploader",
  "version": "1.2",
  "author": "Alan Dours",

  "permissions": [
    "cookies",
    "http://*.vtexlocal.com.br/*",
    "*://*.vtexcommercestable.com.br/*",
    "*://*.myvtex.com/*",
    "*://uploader.janisdev.in/*"
  ],

  "background": {
    "scripts": ["js/background.js"]
  },

  "content_scripts": [
    {
      "matches": ["http://*.vtexlocal.com.br/admin", "*://uploader.janisdev.in/*"],
      "js": ["js/vtex-local-cookie.js"]
    }
  ]
}